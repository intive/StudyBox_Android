<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/exam_layout_padding"
    android:weightSum="1">

    <TextView
        android:id="@+id/congrats"
        android:text="@string/congrats"
        android:textSize="@dimen/exam_large_text"
        android:gravity="bottom|center_horizontal"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/exam_element_bottom_margin"/>

    <TextView
        android:id="@+id/your_score"
        android:text="@string/your_score"
        android:textSize="@dimen/exam_medium_text"
        android:gravity="center"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/exam_element_margin" />

    <TextView
        android:id="@+id/total_score"
        android:text="@string/correct_answers"
        android:textSize="@dimen/exam_large_text"
        android:gravity="center"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/exam_element_bottom_margin" />

    <Button
        android:id="@+id/my_decks"
        android:text="@string/my_decks"
        android:textAllCaps="true"
        android:textSize="@dimen/exam_medium_text"
        android:textColor="@color/white"
        android:layout_weight="0.2"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorDarkBlue"
        android:gravity="center"
        android:paddingLeft="@dimen/your_decks_button_padding"
        android:paddingRight="@dimen/your_decks_button_padding"
        android:layout_marginBottom="@dimen/your_score_bottom_margin"/>

    <Button
        android:id="@+id/improve_result"
        android:text="@string/improve_result"
        android:textAllCaps="true"
        android:textSize="@dimen/exam_medium_text"
        android:textColor="@color/white"
        android:layout_weight="0.2"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/improve_result_button_padding"
        android:paddingRight="@dimen/improve_result_button_padding"
        android:layout_gravity="center"
        android:onClick="restartExam"
        android:background="@color/colorGraphite"
        android:gravity="center" />

</LinearLayout>