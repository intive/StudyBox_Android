<resources>

    <!-- Base application Theme -->
    <style name="StudyBoxTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorGraphite</item>
        <item name="colorPrimary">@color/colorRaspberry</item>
        <item name="colorAccent">@color/colorDarkBlue</item>
        <item name="android:colorBackground">@color/colorGrey</item>
        <item name="android:windowBackground">@color/colorGrey</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Style for font "Lato-Black" -->
    <style name="StudyBoxTheme.BoldTextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Lato-Black.ttf</item>
    </style>

    <!-- Style for splash screen -->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Style for activities without navigation drawer -->
    <style name="NoDrawerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorGraphite</item>
        <item name="colorPrimary">@color/colorRaspberry</item>
        <item name="colorAccent">@color/colorDarkBlue</item>
        <item name="android:colorBackground">@color/colorGrey</item>
        <item name="android:windowBackground">@color/colorGrey</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StudyBoxTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="StudyBoxTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
